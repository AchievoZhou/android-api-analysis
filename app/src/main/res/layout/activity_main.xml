<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idisfkj.androidapianalysis.MainActivity">

    <com.idisfkj.androidapianalysis.DragContainerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/horizontalView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="horizontalView"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/verticalView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/horizontalView"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="verticalView"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/flexibleView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/verticalView"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="flexibleView"
            android:textColor="@android:color/white" />

    </com.idisfkj.androidapianalysis.DragContainerView>

</android.support.constraint.ConstraintLayout>
